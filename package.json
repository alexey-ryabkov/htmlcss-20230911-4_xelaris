{
  "name": "tasks-htmlcss",
  "version": "1.0.0",
  "description": "Course Materials",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --no-warnings --ignore=node_modules/** **/*.test.js",
    "build": "cross-env DEBUG_CSS=true postcss src/index.scss -o dist/styles.css"
  },
  "husky": {
